<h3>Enter your formula below, using bakers percentages.</h3>

<%= form_for @formula do |f| %>
  <%= form_errors_for @formula %>
  <%= f.label :name, 'Formula Name'%><br/>
  <%= f.text_field :name %><br />
  <%= f.label :hydration, 'Hydration'%><br/>
  <%= f.text_field :hydration %><br />
  <%= f.label :salt, 'Salt'%><br/>
  <%= f.text_field :salt %><br />
  <%= f.label :starter, 'Starter'%><br/>
  <%= f.text_field :starter %><br />
  <%= f.label :preferment, 'Preferment'%><br />
  <%= f.text_field :preferment %><br />
  <%= f.submit %>
<% end %>
