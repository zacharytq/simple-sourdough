<h1><%= @user.name %></h1>
<br />
<h2>Recent Formulas</h2>
<% Formula.where(author: @user.id).limit(5).order(created_at: :asc).each do |formula| %>
  <h4><%= formula.name %></h4>
  <%= link_to "Go to formula.", formula_path(formula) %>
<% end %>

<h2>Recent Bakes</h2>
<% @bakes.each do |bake| %>
  <h4><%= bake.formula.name %> Baked on <%= bake.bake_time %></h4>
  <%= link_to "Go to bake", bake_path(bake) %>
<% end %>



  
